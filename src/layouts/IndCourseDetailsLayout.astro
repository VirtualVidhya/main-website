---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  metadata: {
    title: string;
    description: string;
  };
  navSection: string;

  courseDetails: {
    name: string;
    duration: string;
    image: string;
    imgAlt: string;
    overview: string;
  };
}

const { metadata, navSection, courseDetails } = Astro.props;
---

<BaseLayout metadata={metadata} navSection={navSection}>
  <main class="ind-course-main-section">
    <section class="ind-course-header-section">
      <h2 class="ind-course-heading">{courseDetails.name}</h2>

      <button class="enroll-btn">
        <a href="/contact/">Enroll Now</a>
      </button>

      <div class="ind-course-duration">
        <i class="fa-regular fa-clock"></i>
        <p>{courseDetails.duration} months</p>
      </div>

      <img
        src={courseDetails.image}
        alt={courseDetails.imgAlt}
        class="ind-course-illus"
        decoding="async"
      />
    </section>

    <!-- Overview -->
    <section class="ind-course-overview-section">
      <h4 class="ind-course-section-heading">Overview</h4>
      <p class="text-left">
        {courseDetails.overview}
      </p>
    </section>

    <!-- Curriculum -->
    <section class="ind-course-curriculum-section">
      <h4 class="ind-course-section-heading">Course Curriculum</h4>

      <ul class="list-outside list-none mx-auto">
        <slot name="course-curriculum-slot" />
      </ul>
    </section>

