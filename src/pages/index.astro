---
import BaseLayout from "../layouts/BaseLayout.astro";
import LottieAnimCanvas from "../components/LottieAnimCanvas.astro";
import LinkPage from "../components/LinkPage.astro";
import IconCaretRight from "../components/icons/IconCaretRight.astro";
import VvidhyaLogo from "../components/VvidhyaLogo.astro";

const metadata = {
  title:
    "V.Vidhya - Your Virtual Path To Knowledge | Computer Education for All in Surat",
  description:
    "Learn top computer courses at V.Vidhya in Surat. From programming to graphic design, boost your skills and indulge your creativity to do real work with the help of technology.",
};

const animData = {
  forAllAgesAnim: {
    id: "for-all-ages-illus",
    path: "/animations/for-all-ages.lottie",
    img: "/animations/for-all-ages.svg",
  },
  LearnByDoingAnim: {
    id: "learn-by-doing-illus",
    path: "/animations/learn-by-doing.lottie",
    img: "/animations/learn-by-doing.svg",
  },
  personalApproachAnim: {
    id: "personalized-approach-illus",
    path: "/animations/personalized-approach.lottie",
    img: "/animations/personalized-approach.svg",
  },
  integrityAnim: {
    id: "integrity-illus",
    path: "/animations/integrity.lottie",
    img: "/animations/integrity.svg",
  },
  contactAnim: {
    id: "contact-illus",
    path: "/animations/contact.lottie",
    img: "/animations/contact.svg",
  },
};
---

<BaseLayout
  metadata={metadata}
  includeLottieAnimScript={true}
  navSection="home"
>
  <main
    class="flex flex-col items-center justify-center gap-3 w-full !my-0 mt-20 !mb-0 !pb-0"
  >
    <section class="flex flex-col items-center justify-center text-center">
      <div class="flex flex-col xs:flex-row xs:gap-2 items-center mb-20">
        <VvidhyaLogo logoClass="home-logo-svg" />

        <div
          class="flex flex-col justify-around xs:gap-1 sm:gap-2 lg:gap-4 xl:gap-5 mt-2 xs:mt-3 xl:mt-4"
        >
          <h1
            class="text-font-color-pri text-4xl xs:text-[42px] sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-black"
          >
            V.Vidhya
          </h1>

          <h2
            class="text-font-color-sec text-base md:text-xl lg:text-2xl xl:text-3xl font-bold"
          >
            Your virtual path to knowledge
          </h2>
        </div>
      </div>

      <LinkPage
        href="/courses/"
        class="explore-courses-btn"
        title="Explore Courses"
      />
    </section>

    <div class="relative w-full my-20">
      <div class="-z-10 rotate-180">
