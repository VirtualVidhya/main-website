---
import CourseCardLayout from "../../../layouts/CourseCardLayout.astro";
import CourseCardToolTag from "../../CourseCardToolTag.astro";

const courseCardDetails = {
  refLink: "/courses/multimedia/interior-design/",
  icon: "/images/course-icons/interior-design-symbol.png",
  lazyLoadIconImg: false,
  name: "Interior Design",
  description:
    "Design functional digital interiors with a focus on aesthetics...",
  duration: "10-12",
};
---

<CourseCardLayout {courseCardDetails}>
  <slot slot="course-tool-tags-slot">
    <CourseCardToolTag toolName="AutoCAD" />
    <CourseCardToolTag toolName="3ds Max" />
    <CourseCardToolTag toolName="Photoshop" />
    <CourseCardToolTag toolName="Premiere Pro" />
  </slot>
</CourseCardLayout>
