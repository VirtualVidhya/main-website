---
import CourseCardLayout from "../../../layouts/CourseCardLayout.astro";
import CourseCardToolTag from "../../CourseCardToolTag.astro";

const courseCardDetails = {
  refLink: "/courses/programming/game-development/",
  icon: "/images/course-icons/game-controller.png",
  lazyLoadIconImg: false,
  name: "Game Development",
  description:
    "Learn to design and develop 2D & 3D games to bring your game to life...",
  duration: "7-12",
};
---

<CourseCardLayout {courseCardDetails}>
  <slot slot="course-tool-tags-slot">
    <CourseCardToolTag toolName="Unity" />
    <CourseCardToolTag toolName="C#" />
  </slot>
</CourseCardLayout>
