---
import CourseCardLayout from "../../../layouts/CourseCardLayout.astro";
import CourseCardToolTag from "../../CourseCardToolTag.astro";

const courseCardDetails = {
  refLink: "/courses/programming/full-stack-webdev/",
  icon: "/images/course-icons/networking-manager.png",
  lazyLoadIconImg: false,
  name: "Full-stack\nWeb-Development",
  description:
    "Build powerful web applications from front-end to back-end...",
